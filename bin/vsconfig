#!/bin/bash

PROJECT_DIRECTORY=$PWD
FILE=''

echo ""
echo ""
echo "==================================================="
echo "GENERATE VIMSPECTOR CONFIGURATION FOR YOUR PROJECT"
echo "==================================================="
echo ""
echo ""
echo ""

function choice_pwd {
    echo "== 1: PROJECT DIRECTORY ==========================="
    echo ""
    echo "Your project's location is: '$PROJECT_DIRECTORY'"
    echo ""
    PS3='
Please enter your choice: '
    options=("Confirm" "Edit" "Quit")
    select opt in "${options[@]}"
    do
        case $opt in
            "Confirm")
                echo ""
                echo "You confirm project's location: '$PROJECT_DIRECTORY'"
                echo ""
                echo "== 1: PROJECT DIRECTORY ============================"
                choice_language
                ;;
            "Edit")
                echo ""
                echo 'Enter new project location:'
                echo ""
                read DIRECTORY
                DIRECTORY=${DIRECTORY%/}
                if [ -d "$DIRECTORY" ]; then
                    # Directory exists
                    cd "$DIRECTORY"
                    PROJECT_DIRECTORY=$DIRECTORY
                    echo ""
                    echo "Now project's location is: $PROJECT_DIRECTORY"
                    echo ""
                    echo "== 1: PROJECT DIRECTORY ============================"
                    choice_language
                else
                    echo "Invalid directory: $DIRECTORY"
                    exit 1
                fi
                ;;
            "Quit")
                exit 0
                ;;
            *) echo "Invalid option $REPLY";;
        esac
    done
}

function choice_language {
    echo ""
    echo ""
    echo ""
    echo "== 2: CHOICE LANGUAGE ============================"
    echo ""
    echo "Available languages:"
    echo ""
    PS3='Please enter your choice: '
    options=("cpp" "dart" "javascript / typescript" "python" "rust" "Quit")
    select opt in "${options[@]}"
    do
        case $opt in
## CPP
            "cpp")
                FILE='.vimspector.json'
                if [ -f $FILE ]; then
                    echo ""
                    echo "File exist. Overwrite?"
                    echo ""
                    PS3='Please enter your choice: '
                        options=("Yes" "No" "Quit")
                        select opt in "${options[@]}"
                        do
                            case $opt in
                                "Yes")
                                    cp ~/.config/nvim/bin/debugers/vimspector/cpp/$FILE ./
                                    break
                                    ;;
                                "No")
                                    break
                                    ;;
                                "Quit")
                                    exit 0
                                    ;;
                                *) echo "invalid option $REPLY";;
                            esac
                        done
                else
                    cp ~/.config/nvim/bin/debugers/vimspector/cpp/$FILE ./
                fi
                echo "File $FILE created in: '$PROJECT_DIRECTORY'"
                echo ""
                echo "== 2: CHOICE LANGUAGE =============================="
                edit
                ;;
## CPP
## DART
            "dart")
                FILE='.vimspector.json'
                if [ -f $FILE ]; then
                    echo ""
                    echo "File exist. Overwrite?"
                    echo ""
                    PS3='Please enter your choice: '
                        options=("Yes" "No" "Quit")
                        select opt in "${options[@]}"
                        do
                            case $opt in
                                "Yes")
                                    cp ~/.config/nvim/bin/debugers/vimspector/dart/$FILE ./
                                    break
                                    ;;
                                "No")
                                    break
                                    ;;
                                "Quit")
                                    break
                                    ;;
                                *) echo "invalid option $REPLY";;
                            esac
                        done
                else
                    cp ~/.config/nvim/bin/debugers/vimspector/dart/$FILE ./
                fi
                echo "File $FILE created in: '$PROJECT_DIRECTORY'"
                echo ""
                echo "== 2: CHOICE LANGUAGE =============================="
                edit
                ;;
## DART
## JAVASCRIPT / TYPESCRIPT
            "javascript / typescript")
                FILE='.vimspector.json'
                if [ -f $FILE ]; then
                    echo ""
                    echo "File exist. Overwrite?"
                    echo ""
                    PS3='Please enter your choice: '
                        options=("Yes" "No" "Quit")
                        select opt in "${options[@]}"
                        do
                            case $opt in
                                "Yes")
                                    cp ~/.config/nvim/bin/debugers/vimspector/js-ts/$FILE ./
                                    break
                                    ;;
                                "No")
                                    break
                                    ;;
                                "Quit")
                                    break
                                    ;;
                                *) echo "invalid option $REPLY";;
                            esac
                        done
                else
                    cp ~/.config/nvim/bin/debugers/vimspector/js-ts/$FILE ./
                fi
                echo "File $FILE created in: '$PROJECT_DIRECTORY'"
                echo ""
                echo "== 2: CHOICE LANGUAGE =============================="
                edit
                ;;
## JAVASCRIPT / TYPESCRIPT
## PYTHON
            "python")
                FILE='.vimspector.json'
                if [ -f $FILE ]; then
                    echo ""
                    echo "File exist. Overwrite?"
                    echo ""
                    PS3='Please enter your choice: '
                        options=("Yes" "No" "Quit")
                        select opt in "${options[@]}"
                        do
                            case $opt in
                                "Yes")
                                    cp ~/.config/nvim/bin/debugers/vimspector/python/$FILE ./
                                    break
                                    ;;
                                "No")
                                    break
                                    ;;
                                "Quit")
                                    break
                                    ;;
                                *) echo "invalid option $REPLY";;
                            esac
                        done
                else
                    cp ~/.config/nvim/bin/debugers/vimspector/python/$FILE ./
                fi
                echo "File $FILE created in: '$PROJECT_DIRECTORY'"
                echo ""
                echo "== 2: CHOICE LANGUAGE =============================="
                edit
                ;;
## PYTHON
## RUST
            "rust")
                FILE='.vimspector.json'
                if [ -f $FILE ]; then
                    echo ""
                    echo "File exist. Overwrite?"
                    echo ""
                    PS3='Please enter your choice: '
                        options=("Yes" "No" "Quit")
                        select opt in "${options[@]}"
                        do
                            case $opt in
                                "Yes")
                                    cp ~/.config/nvim/bin/debugers/vimspector/rust/$FILE ./
                                    break
                                    ;;
                                "No")
                                    break
                                    ;;
                                "Quit")
                                    break
                                    ;;
                                *) echo "invalid option $REPLY";;
                            esac
                        done
                else
                    cp ~/.config/nvim/bin/debugers/vimspector/rust/$FILE ./
                fi
                echo "File $FILE created in: '$PROJECT_DIRECTORY'"
                echo ""
                echo "== 2: CHOICE LANGUAGE =============================="
                edit
                ;;
## RUST
            "Quit")
                break
                ;;
            *) echo "invalid option $REPLY";;
        esac
    done
}

function edit {
    echo ""
    echo ""
    echo ""
    echo "== 3: EDIT FILE ==================================="
    echo ""
    echo "Do you want to edit file?"
    echo ""
    PS3='Please enter your choice: '
    options=("Yes" "Quit")
    select opt in "${options[@]}"
    do
        case $opt in
            "Yes")
                nvr -l  "$PROJECT_DIRECTORY/$FILE"
                exit 0
                ;;
            "Quit")
                exit 0
                ;;
            *) echo "invalid option $REPLY";;
        esac
    done
}

choice_pwd
